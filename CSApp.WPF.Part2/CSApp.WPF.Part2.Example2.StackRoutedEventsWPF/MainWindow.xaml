<Window x:Class="CSApp.WPF.Part2.Example2.StackRoutedEventsWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSApp.WPF.Part2.Example2.StackRoutedEventsWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBox" TextWrapping="Wrap" Text="" Width="120"/>
        <StackPanel ButtonBase.Click="StackPanel_Click" HorizontalAlignment="Left" Margin="350,40,0,0" VerticalAlignment="Top" Width="100">
            
            <Button x:Name="buttonAdd" Content="Add" Height="20" Width="66"/>
            <Button x:Name="buttonMult" Content="Multiply" Height="28" Width="65"/>
            <Button x:Name="buttonSqrt" Content="Sqrt" Height="28" Width="65"/>
        </StackPanel>

    </Grid>
</Window>
